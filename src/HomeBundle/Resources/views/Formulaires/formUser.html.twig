{% extends "HomeBundle:Default:index.html.twig" %}

{% block title %}{{ parent() }}-Edit Utilisateur{% endblock %}

{% block content %} 

<div style="width:60%">

<h4>Création/Modification : <font color="orange"> {{ user.firstName }}</font> <span id="alertmsg"><font color="#CCCCCC">{{st}}</font></span> </h4>
  <div class="well">
    {{ form_start(form, {'attr': {'class': ''}}) }}

  {# Les erreurs générales du formulaire. #}
  {{ form_errors(form) }}

  {# Génération manuelle et éclatée : #}


<div class="form-group">
   <div class="col-md-13">
    <label> Ancien mot de passe *</label>
    <input class="form-control" id="lastPasswordTypeid" name="lastPasswordType" type="password" class="form-control">
    <input hidden="true" id="stateValidPasswordId" name="stateValidPassword" type="text" value="">
    <input hidden="true" id="passLengthId" name="passLength" type="text" value="">
  </div>
  <span id="lastpassMessage"></span>
</div>

<div class="form-group">
  <label>
    {{ form_label(form.password, "Nouveau mot de passe *", {'label_attr': {'class': 'form-check-label', 'id':'passwordid'}}) }}
    {{ form_errors(form.password) }}
    </label>
      {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
      <span id="lengthErrorId"></span>
</div>

<div class="form-group">
   <div class="col-md-13">
    <label> Confirmer le nouveau mot de passe *</label>
    <input class="form-control" id="confirmPasswordid" name="confirmPassword" type="password" class="form-control">
  </div>
    <span id="confirmePasswordId"></span>

</div>


<div class="form-group">
  <label>
    {{ form_label(form.login, "Login *", {'label_attr': {'class': 'form-check-label'}}) }}
    {{ form_errors(form.login) }}
    </label>
      {{ form_widget(form.login, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="form-group">
<label>
    {# Génération du label. #}
    {{ form_label(form.firstName, "Nom *", {'label_attr': {'class': 'form-check-label'}}) }}
    {{ form_errors(form.firstName) }}
    </label>
      {# Génération de l'input. #}
      {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
  </div>

<div class="form-group">
  <label>
    {{ form_label(form.name, "Prénom *", {'label_attr': {'class': 'form-check-label'}}) }}
    {{ form_errors(form.name) }}
  </label>
      {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
  </div>

<div class="form-group">
  <label>
    {{ form_label(form.email, "Email", {'label_attr': {'class': 'form-check-label'}}) }}
    {{ form_errors(form.email) }}
  </label>
      {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
  </div>

  <div class="form-group">
    <label>
    {{ form_label(form.phone, "Téléphone *", {'label_attr': {'class': 'form-check-label'}}) }}
    {{ form_errors(form.phone) }}
  </label>
      {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
  </div>

  {% if operation=="update" %}
  <p align="right"><i>Bien vouloir bien vérifier que les champs sont corrects</i></p>
  <div class="modal-footer">
        <button id="btnUpdatePassword" type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Terminé<i class="icon-white icon-ok-sign"></i></button>
	</div>
  {% endif %}
  {{ form_end(form) }}
</div>
</div>
</div>

{% endblock %}